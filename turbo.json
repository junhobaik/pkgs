{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "@junhobaik/ui#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },

    "@junhobaik/ui#watch": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": false,
      "persistent": true
    },

    "@junhobaik/ui#storybook": {
      "cache": false,
      "persistent": true
    },

    "@junhobaik/ui#storybook-build": {
      "dependsOn": ["^build"],
      "outputs": ["dist_sb/**"]
    },

    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
