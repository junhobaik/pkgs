{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "dependsOn": ["@junhobaik/ui#build", "@junhobaik/editor#build"],
      "outputs": ["dist-sb/**"]
    },

    "@junhobaik/ui#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@junhobaik/ui#watch": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": false,
      "persistent": true
    },

    "@junhobaik/editor#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@junhobaik/editor#watch": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": false,
      "persistent": true
    },

    "storybook#build-storybook": {
      "dependsOn": ["@junhobaik/ui#build", "@junhobaik/editor#build"],
      "outputs": ["dist-sb/**"]
    }
  }
}
