{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "ui#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },

    "ui#watch": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": false,
      "persistent": true
    },

    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
